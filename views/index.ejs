<%- include('shared/header')%>
  <section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
      <div class="row gx-4 gx-lg-5 align-items-top">
        <div class="col-md-6 sticky-top form-group">
          <form class='form' action="/comments" method="POST">
            <label for="textarea-comment">Digite aqui um comentário:</label>
            <textarea id="textarea-comment" name="comment" rows="8" cols="40"
              class="comment mb-5 mb-md-0 form-group"></textarea>
            <button type="submit" class="btn btn-outline-dark flex-shrink-0">
              Comentar
            </button>
          </form>
        </div>
        <div class="col-md-6">
          <h3>Comentários:</h3>
          <div data-spy="scroll" class="comments" data-offset="0">
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>
  <script>
    const play = document.querySelector('#play')

    play.addEventListener('click', function () {

      const audio = document.querySelector('audio')

      audio.play

    })
  </script>
  <%- include('shared/footer')%>